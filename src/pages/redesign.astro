---
import Layout from '../layouts/Layout.astro';
import Text from '../components/Text.astro';
import Slideshow from '../components/slideshow';
---

<Layout>
    <section id="one" class="w-screen h-[130vh] bg-[#E2CCAD] relative">
        <div id="one-background" class="w-full h-full bg-white flex flex-col justify-start items-center">
            <div id="one-h1" class="sm:w-full md:w-1/2 h-1/2 flex flex-col justify-center items-center text-center sm:gap-2 md:gap-5 mt-[20%] md:mt-[0%]">
                <div>
                    <h1>Fall in love with your</h1>
                    <h1>brows again</h1>
                </div>
                
                <div class="w-[60%] h-fit">
                    <p class="font-[SpaceGrotesk-Variable] text-[20px]">Tailored eyebrow solutions from basic shading to cosmetic tattooing.</p>
                </div>
                <div class="w-full h-fit flex flex-row justify-center items-center gap-10 m-5">
                    <button class="w-[140px] h-[50px] rounded-full bg-black text-white text-xl">Contact</button>
                    <button class="w-[140px] h-[50px] rounded-full bg-white border-2 border-[#543A14] text-xl text-[#543A14]">Learn More</button>
                </div>
            </div>
        </div>
    </section>

    <div id="one-image" class="animate w-screen h-fit flex justify-center absolute z-30 mt-[-50vh] md:mt-[-70vh]">
        <div class="relative flex w-[85%] h-[70vh] justify-center">
            <div id="img" class="absolute w-full h-full bg-amber-200 border-[1.5rem] border-white shadow-[0_0_20px_rgba(0,0,0,0.2)] z-30"></div>
            <div class="absolute w-full h-full bg-[#EEEEEE] z-20 rotate-[7deg] shadow-[0_0_20px_rgba(0,0,0,0.2)]"></div>
            <div class="absolute w-full h-full bg-[#F2F2F2] z-10 rotate-[-5deg] shadow-[0_0_20px_rgba(0,0,0,0.2)]"></div>
        </div>
        
    </div>
    
    <section id="two" class="w-screen sm:h-auto md:h-[100vh] bg-[#EAD8C0] flex flex-col justify-start items-center relative ">
            
