            </svg>
                
            <div class="w-5/6 h-2/3 bg-gray-200">
                
            </div>
        </div>
    </section>

    <section id="six" class="sm:h-auto w-screen md:h-[80vh] bg-[#543A14] flex justify-center items-center text-white">
