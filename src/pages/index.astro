---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Services from '../components/services.astro'


// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<section class="hero-content w-screen h-screen bg-black flex justify-center items-center">
		<div class="w-1/2 h-auto flex flex-col items-center">
			<h1 class="hero-text text-center">Fall in love with <i>your eyebrows</i> again.</h1>
			<p class="text-center">Tailored eyebrow solutions from basic shading to cosmetic tattooing.</p>
			<button class="hero-btn btn rounded-full bg-green-900 px-10 py-1 border-white border-2 my-10 hover:scale-[106%] transition ease-in-out">Learn More</button>
		</div>
	</section>

	<section id="services" class="w-screen h-150 bg-amber-50">
		<div class="sec-2 w-auto h-auto flex justify-center">
			<h1 class="my-10 text-black">Services</h1>
		</div>
		
		<div class="w-5/6 h-auto mx-auto flex flex-row justify-between">
			<Services >
				<p slot="first" class="text-black" >title</p>
				<p slot="second" class="text-black">Tailored eyebrow solutions from basic shading to cosmetic tattooing.</p>
			</Services>
			<Services>
				<p slot="first" class="text-black">title</p>
				<p slot="second" class="text-black">Tailored eyebrow solutions from basic shading to cosmetic tattooing.</p>
			</Services>
			<Services>
				<p slot="first" class="text-black">title</p>
				<p slot="second" class="text-black">Tailored eyebrow solutions from basic shading to cosmetic tattooing.</p>
			</Services>
		</div>

		<div class="w-5/6 h-auto mx-auto flex flex-row justify-evenly">
			<Services >
				<p slot="first" class="text-black" >title</p>
				<p slot="second" class="text-black">Tailored eyebrow solutions from basic shading to cosmetic tattooing.</p>
			</Services>
			<Services>
				<p slot="first" class="text-black">title</p>
				<p slot="second" class="text-black">Tailored eyebrow solutions from basic shading to cosmetic tattooing.</p>
			</Services>
		</div>
	</section>

	<section id="testimony" class="w-screen h-150 bg-green-900">
		<div class="sec-3 w-auto h-auto flex justify-center">
			<h1 class="my-10 text-amber-50">Client Reviews</h1>
		</div>
	</section>

	<section id="About" class="w-screen h-150 bg-white flex justify-center items-center">
		<div class="sec-4 w-5/6 h-5/6 flex justify-center bg-amber-50">
			<h1 class="my-10 text-black">Hi, Im Thyda</h1>
		</div>
	</section>
</Layout>

<style>

	.hero-text{
		font-family: 'Boska-Variable';
		font-weight: 700;
		font-size: 80px;
		color: white;
	}

	.hero-text i{
		font-family: 'Boska-VariableItalic';
		font-weight: 700;
		font-size: 80px;
		color: white;
	}

	.hero-content p{
		font-family: 'Boska-Variable';
		font-weight: 400;
		font-size: 25px;
		color: white;
	}

	.hero-btn{
		font-family: 'Boska-Variable';
		font-weight: 400;
		font-size: 25px;
		color: white;
	}

	#services{
		clip-path: ellipse(99% 100% at bottom);
		z-index: 10;
		margin-top: -150px;
	}

	.sec-2 h1, .sec-3 h1{
		font-family: 'Boska-Variable';
		font-weight: 500;
		font-size: 40px;
	}




</style>
